<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="?android:actionBarItemBackground"
    android:orientation="horizontal"
    android:paddingRight="8dp">

<ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="?android:homeAsUpIndicator"/>

    <com.github.pennyfive.cinemafinlando.ui.view.CustomTypefaceTextView
        android:id="@+id/text"
        style="@style/android:TextAppearance.Holo.Widget.ActionBar.Title"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:orientation="vertical"
        android:shadowColor="#dc000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:singleLine="true"
        android:textColor="@android:color/white"
        app:customTypeface="light"/>
</LinearLayout>