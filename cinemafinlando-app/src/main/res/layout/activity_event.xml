<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                tools:context=".ui.EventActivity">

    <com.github.pennyfive.cinemafinlando.ui.FixedAspectRatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        app:aspectRatio="@dimen/promo_image_aspect_ratio"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"/>


    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="98dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:minHeight="108dp"
        android:background="@drawable/details_background"
        android:layout_below="@id/image"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <com.github.pennyfive.cinemafinlando.ui.CustomTypefaceTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textStyle="italic"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="Movie name"/>

        <com.github.pennyfive.cinemafinlando.ui.CustomTypefaceTextView
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#5674b9"
            tools:text="List of genres"/>

        <com.github.pennyfive.cinemafinlando.ui.CustomTypefaceTextView
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#5674b9"
            tools:text="Duration in minutes"/>
    </LinearLayout>

    <com.github.pennyfive.cinemafinlando.ui.SimplePagerTabWidget
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#5674b9"
        android:layout_below="@id/details"/>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="81dp"
        android:layout_height="120dp"
        android:layout_below="@id/image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/event_poster_background"
        android:scaleType="fitXY"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tabs"/>

</RelativeLayout>