<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/event_item_background"
             android:orientation="vertical">

    <com.github.pennyfive.cinemafinlando.ui.FixedAspectRatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:aspectRatio="@dimen/promo_image_aspect_ratio"
        tools:src="@drawable/event_placeholder"/>

    <LinearLayout
        android:id="@+id/bottom_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#78000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.github.pennyfive.cinemafinlando.ui.CustomTypefaceTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="#5674b9"
            android:includeFontPadding="false"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:customTypeface="roboto_condensed"
            tools:text="10.10.2015"/>

        <com.github.pennyfive.cinemafinlando.ui.CustomTypefaceTextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16.5sp"
            app:customTypeface="roboto_condensed"
            tools:text="Name of the movie"/>
    </LinearLayout>
</FrameLayout>