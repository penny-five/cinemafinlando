<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <com.github.pennyfive.cinemafinlando.ui.view.CustomTypefaceTextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:customTypeface="light"
        android:layout_marginRight="8dp"
        tools:text="Tennispalatsi"
        />

    <TextView
        android:id="@+id/subtitle"
        style="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="12sp"
        tools:text="Today"
        />

</LinearLayout>