<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.github.pennyfive.finnkino.ui.FixedAspectRatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:aspectRatio="@dimen/promo_image_aspect_ratio" />

    <com.github.pennyfive.finnkino.ui.CustomTypefaceTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/item_show_fade_bg"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:customTypeface="roboto_light" />


</FrameLayout>