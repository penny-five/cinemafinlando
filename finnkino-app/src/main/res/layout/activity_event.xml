<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                tools:context=".ui.EventActivity">

    <com.github.pennyfive.finnkino.ui.LandscapeEventImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"/>


    <ImageView
        android:id="@+id/poster"
        android:layout_width="89dp"
        android:layout_height="120dp"
        android:layout_below="@id/image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/event_poster_background"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/poster"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:padding="8dp">

        <com.github.pennyfive.finnkino.ui.CustomTypefaceTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="Movie name"/>

        <com.github.pennyfive.finnkino.ui.CustomTypefaceTextView
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="List of genres"/>

        <com.github.pennyfive.finnkino.ui.CustomTypefaceTextView
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            tools:text="Duration in minutes"/>
    </LinearLayout>


    <com.github.pennyfive.finnkino.ui.SimplePagerTabWidget
        android:id="@+id/tabs"
        style="@android:style/Widget.Holo.TabWidget"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/details_layout"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tabs"/>

</RelativeLayout>